{
  "name": "GUC Thesis Helper",
  "version": "1.5.1",
  "description": "Get some help dealing with the worst possible prioritization system",
  "manifest_version": 3,
  "host_permissions": [
    "https://apps.guc.edu.eg/student_ext/Thesis/ChooseThesis_01.aspx"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://apps.guc.edu.eg/student_ext/Thesis/ChooseThesis_01.aspx"
      ],
      "js": [
        "src/js/vendor/sortable.js",
        "src/js/constants.js",
        "src/js/dom-manipulation.js",
        "src/js/main.js",
        "src/js/request-formatter.js",
        "src/js/inject.js",
        "src/js/spinner.js"
      ],
      "css": [
        "src/css/vendor/sortable.css",
        "src/css/spinner.css",
        "src/css/style.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_specific_settings": {
  "gecko": {
    "id": "thesis.helper@guc.com"
    }
	}
}